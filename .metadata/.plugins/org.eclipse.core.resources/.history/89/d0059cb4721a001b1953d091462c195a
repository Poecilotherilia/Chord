package com.Chord.data;

import java.net.SocketException;
import java.net.UnknownHostException;

import com.Net.Client;
import com.Net.PacketType;
import com.alibaba.fastjson.JSONObject;

public class Node {
	private Address addr;
	private Address predecessor;
	private Address successor;
	private FingerTable fingerTable;
	private Node(String ip,int port) {
		this.addr = new Address(ip,port);
		this.fingerTable = new FingerTable();
	}
	
	public Node CreateNewNode(String ip,int port,String seed) throws UnknownHostException, SocketException {
		Node node = new Node(ip,port);
		Address seedAddr = new Address(seed);
        JSONObject json = new JSONObject();
        json.put("PacketType", PacketType.FindLocWithCreateNode);
        json.put("2", "b");
        System.out.println(json.toJSONString());
		Client.Instance().send(seedAddr.GetIP(), seedAddr.GetPort(),"aa");
		return node;
	}
}
